---
import Layout from '../layouts/Layout.astro';
import { fade } from 'astro:transitions';

---

<Layout title="Blaisy Records">
	<main>
		<video muted loop playsinline transition:name="hero" transition:persist>
			<source src="./trimmed.mp4#t=1" type="video/mp4">
			Your browser does not support the video tag.
		</video>
		<h1 transition:animate={fade({ duration: '1s' })} >- under construction -</h1>
	</main>
</Layout>

<script>
	const video = document.querySelector("video");

	if (video) {
		video.addEventListener("pointerenter", function () {
			this.play()
		});
		video.addEventListener("pointerleave", function () {
			this.pause()
		});
	}
</script>

<style>
	main {
		padding: 5vh 5vw;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 40px;
	}
	h1 {
		color: aliceblue;
		font-size: clamp(20px, 5vw, 50px);
		font-weight: 400;
	}
	video {
		background-color: white;
		aspect-ratio: 1 / 1;
		width: 150px;
		border-radius: 500px;
	}
</style>
