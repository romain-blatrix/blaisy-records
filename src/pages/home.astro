---
import Layout from "../layouts/Layout.astro";
import LogoImage from "../components/LogoImage.astro";
import { fade } from "astro:transitions";
---

<Layout title="Blaisy Records">
  <main>
    <LogoImage />

    <nav transition:animate={fade({ duration: "1s" })}>
      <a href="/merch">Merch</a>
      <a href="/about">About</a>
    </nav>
  </main>
</Layout>

<script>
  const video = document.querySelector("video");

  if (video) {
    video.addEventListener("pointerenter", function () {
      this.play();
    });
    video.addEventListener("pointerleave", function () {
      this.pause();
    });
  }
</script>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    gap: 40px;
  }

  nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    height: 100%;
    gap: 40px;
  }

  nav a {
    transition: scale 200ms ease-in-out;
    color: white;
    font-size: 50px;
    font-weight: 400;
    text-decoration: none;
  }

  nav a::after {
    content: "";
    display: block;
    width: 130%;
    margin-left: -15%;
    height: 2px;
    background-color: white;
    transition: width 200ms ease-in-out;
    border-radius: 2px;
  }

  nav a:hover {
    scale: 1.05;
    transition: scale 200ms ease-in-out;
  }
</style>
