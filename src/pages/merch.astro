---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { fade } from "astro:transitions";

import logo from "../../public/logo.png";
import { getImage } from "astro:assets";

const optimizedImage = await getImage({
  src: logo,
  format: "webp",
});
---

<Fragment slot="head">
  <link rel="preload" href={optimizedImage.src} as="image" />
</Fragment>

<Layout title="Blaisy Records">
  <main>
    <div class="wrapper" transition:name="bubble">
      <Image src={logo} alt="Blaisy Records logo" />
    </div>

    <h1 transition:animate={fade({ duration: "1s" })}>Merch</h1>
  </main>
</Layout>

<style>
  main {
    padding: 5vh 5vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
  }
  .wrapper {
    background-color: white;
    aspect-ratio: 1 / 1;
    width: 80px;
    height: 80px;
    border-radius: 500px;
    padding: 16px;

    position: fixed;
    top: 20px;
    right: 20px;
  }
  img {
    width: 100%;
    height: 100%;
  }
</style>
