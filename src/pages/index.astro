---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Blaisy Records">
	<main>
		<video autoplay muted loop>
			<source src="./BLAISY_PAYSAGE_Noir.mp4" type="video/mp4">
			Your browser does not support the video tag.
		</video>
	</main>
</Layout>

<style>
	main {
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;

		background-color: #000;
	}
	video {
		background-color: white;
		aspect-ratio: 1 / 1;
		width: 75vw;
		max-width: 500px;
		border-radius: 500px;
	}
</style>
